<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".netspy.SampleMockApiActivity">


    <EditText
        android:id="@+id/et_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="path" />

    <EditText
        android:id="@+id/et_resp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="resp_data" />

    <EditText
        android:id="@+id/et_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0,1,-1" />

    <Button
        android:id="@+id/btn_api_records_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="ApiRecordPost"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_api_records_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="ApiRecordGet"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_api_get_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="ApiRecordItem"
        android:textAllCaps="false" />
</LinearLayout>