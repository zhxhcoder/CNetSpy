<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="NetSpy.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/netspy_colorPrimary</item>
        <item name="colorPrimaryDark">@color/netspy_colorPrimaryDark</item>
        <item name="colorAccent">@color/netspy_colorAccent</item>
    </style>

    <style name="NetSpy.TextAppearance.ListItem" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NetSpy.TextAppearance.Label" parent="android:TextAppearance.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NetSpy.TextAppearance.Value" parent="android:TextAppearance.Small">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="NetSpy.TextAppearance.TransactionTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:gravity">top</item>
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
        <item name="android:maxLines">2</item>
    </style>
</resources>